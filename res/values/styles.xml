<resources>

    <style name="Theme.Base" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background</item>
        <item name="popupMenuStyle">@style/PopupMenu.Base</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Base</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Base</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Base</item>
        <item name="actionBarStyle">@style/ActionBar.Transparent.Base</item>
        <item name="actionModeBackground">@drawable/cab_background_top</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Base</item>
    </style>

    <style name="ActionBar.Solid.Base" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid</item>
        <item name="progressBarStyle">@style/ProgressBar.Base</item>
    </style>

    <style name="ActionBar.Transparent.Base" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent</item>
        <item name="progressBarStyle">@style/ProgressBar.Base</item>
    </style>

    <style name="PopupMenu.Base" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel</item>
    </style>

    <style name="DropDownListView.Base" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background</item>
    </style>

    <style name="ActionBarTabStyle.Base" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab</item>
    </style>

    <style name="DropDownNav.Base" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel</item>
        <item name="android:dropDownSelector">@drawable/selectable_background</item>
    </style>

    <style name="ProgressBar.Base" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
    </style>

    <style name="ActionButton.CloseMode.Base" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Base.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Base</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Base</item>
    </style>

</resources>